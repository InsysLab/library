<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="270.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="controller.CheckoutDialogController">
  <children>
    <HBox prefHeight="50.0" prefWidth="200.0">
      <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Checkout Publication">
          <font>
            <Font name="System Bold" size="18.0" />
          </font>
        </Text>
      </children>
    </HBox>
    <HBox alignment="CENTER" prefHeight="130.0" prefWidth="200.0" spacing="5.0">
      <children>
        <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="90.0" spacing="12.0">
          <children>
            <Label text="Member ID" />
            <Label text="Title" />
            <Label text="ISBN/Issue no" />
            <Label text="Max Checkout" />
          </children>
          <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" fx:id="x1" />
          </padding>
        </VBox>
        <VBox padding="$x1" prefHeight="200.0" prefWidth="200.0" spacing="5.0">
          <children>
            <TextField fx:id="tfMemberID" prefWidth="200.0" promptText="Input Member ID" />
            <TextField fx:id="tfTitle" disable="false" editable="false" prefWidth="200.0" />
            <TextField fx:id="tfNumber" disable="false" editable="false" prefWidth="200.0" />
            <TextField fx:id="tfMaxCheckout" disable="false" editable="false" prefWidth="200.0" />
          </children>
        </VBox>
      </children>
    </HBox>
    <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
      <children>
        <Button mnemonicParsing="false" onAction="#handleCheckoutBtnAction" text="Checkout" />
      </children>
    </HBox>
  </children>
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
</VBox>
